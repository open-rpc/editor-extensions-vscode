{
  "name": "OPEN-RPC",
  "displayName": "OPEN-RPC",
  "publisher": "OPEN-RPC",
  "description": "Provides completion and validation for OPEN-RPC openrpc.json documents",
  "version": "1.2.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-rpc/editor-extensions-vscode.git"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "icon": "images/openrpc.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onCommand:openrpc.previewDoc"
  ],
  "main": "./build/extension/extension.js",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "*openrpc.json",
        "url": "https://raw.githubusercontent.com/open-rpc/meta-schema/master/schema.json"
      }
    ],
    "commands": [
      {
        "command": "openrpc.previewDoc",
        "title": "Start OpenRPC preview window",
        "category": "Document Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run compile",
    "compile": "npm run lint && rescripts build && tsc -p tsconfig.extension.json",
    "watch": "tsc -watch -p tsconfig.extension.json",
    "lint": "tslint --fix -p .",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "@material-ui/core": "^4.7.2",
    "@material-ui/icons": "^4.5.1",
    "@open-rpc/docs-react": "^1.1.1",
    "@open-rpc/inspector": "^1.2.6",
    "@open-rpc/meta-schema": "^1.5.4",
    "@open-rpc/schema-utils-js": "^1.11.3",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/uuid": "^3.4.4",
    "localstorage-memory": "^1.0.3",
    "monaco-editor": "^0.18.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "use-dark-mode": "^2.3.1",
    "uuid": "^3.3.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.13",
    "@rescripts/utilities": "0.0.6",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.7.4",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "react-scripts": "^3.3.0",
    "tslint": "^5.14.0",
    "typescript": "^3.7.4",
    "vscode": "^1.1.33"
  },
  "rescripts": [
    "rescript-monaco"
  ]
}
